# TX Docker Compose Configuration
# Copy this file to .env and update the values

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=tx
POSTGRES_PASSWORD=tx_password_change_me
POSTGRES_DB=tx

# ============================================================================
# Server Configuration
# ============================================================================
TX_SERVER_PORT=3847

# ============================================================================
# Web App Configuration
# ============================================================================
TX_WEB_PORT=3000
# The API URL the web app will use (from browser perspective)
# For local Docker: http://localhost:3847
# For production: https://api.yourdomain.com
VITE_API_URL=http://localhost:3847

# ============================================================================
# LLM Configuration
# ============================================================================
# Provider: bedrock, openai, or local
TX_LLM_PROVIDER=bedrock

# For AWS Bedrock (default)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
# Optional: specific model
# TX_LLM_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0

# For OpenAI
# TX_LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-...
# TX_LLM_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=https://api.openai.com/v1

# ============================================================================
# Optional: SSL for PostgreSQL
# ============================================================================
# TX_POSTGRES_SSL=true

